<!-- Modal -->
<div class="modal fade" id="spotModal-<%= spot.id ? spot.id : "row-#{row_number}" %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Squad Place</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for spot do |f| %>
          <%= f.input :name %>
          <%# This is being updated by the drag and drop now  %>
          <%#= f.input :rank %>
          <% unless spot.id %>
            <%= f.input :row_number, as: :hidden, input_html: { value: row_number } %>
            <%= f.association :squad, as: :hidden, input_html: { value: squad.id } %>
          <% end %>
          <%= f.association :position, collection: Position.order(:name) %>
          <%= f.submit class: 'btn btn-primary mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
