<!-- Modal -->
<div class="modal fade" id="playerModal-<%= player.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 mb-2" id="exampleModalLabel"><%= player.name %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h3>Add tags</h3>
        <%= render 'tags/modal', player: player, tags: tags, player_tag: player_tag %>
        <h3 class='mt-2'>Update Info</h3>
        <%= simple_form_for player, remote: true do |f| %>
          <%= f.input :text_color %>
          <%= f.input :current_ability, input_html: { min: 0, max: 5, step: 0.5 } %>
          <%# Not using this one yet %>
          <%#= f.input :potential_low, input_html: { min: 0, max: 5, step: 0.5 } %>
          <%= f.input :potential_high, input_html: { min: 0, max: 5, step: 0.5 } %>
          <%= f.input :price_purchased %>
          <%= f.input :price_sold %>
          <%= f.submit class: 'btn btn-primary mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
