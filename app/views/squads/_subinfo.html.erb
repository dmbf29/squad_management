<div class="d-flex align-items-start">
  <div class="d-flex align-items-start me-2" data-bs-toggle="tooltip" data-bs-title="Home-Grown at Club">
    <span class='text-success me-1 fw-bold'>HGC</span>
    <span class='fw-light'><%= squad.players.where(home_grown_club: true).count %></span>
  </div>
  <div class="d-flex align-items-start me-2" data-bs-toggle="tooltip" data-bs-title="Home-Grown in Nation">
    <span class='text-success me-1 fw-bold'>HGN</span>
    <span class='fw-light'><%= squad.players.where(home_grown_nation: true).count %></span>
  </div>
  <div class="d-flex align-items-center me-2" data-bs-toggle="tooltip" data-bs-title="Waiting for Home-Grown status">
    <small><span class='text-success me-1 fw-bold'><i class="fa-solid fa-hourglass-half"></i></span></small>
    <span class='fw-light'><%= squad.players.where.not(home_grown_date: nil).count %></span>
  </div>
  <div class="d-flex align-items-center me-2" data-bs-toggle="tooltip" data-bs-title="Players >= 30">
    <span class='text-success me-1 fw-bold'>O30</span>
    <span class='fw-light'><%= squad.players.where('age >= 30').count %></span>
  </div>
  <div class="d-flex align-items-center me-2" data-bs-toggle="tooltip" data-bs-title="Players <= 21">
    <span class='text-success me-1 fw-bold'>U21</span>
    <span class='fw-light'><%= squad.players.where('age <= 21').count %></span>
  </div>
  <div class="d-flex align-items-center me-2" data-bs-toggle="tooltip" data-bs-title="Hide Loan Players">
    <span class='text-success me-1 fw-bold'>Loan</span>
    <% if params[:hide_loan] && params[:hide_loan] == 'true' &&  %>
      <span class='fw-light'><%= link_to squad_path(squad, hide_loan: false) do %><i class="fa-solid fa-eye"></i><% end %></span>
    <% else %>
      <span class='fw-light'><%= link_to squad_path(squad, hide_loan: true) do %><i class="fa-solid fa-eye-slash"></i><% end %></span>
    <% end %>
  </div>
</div>
