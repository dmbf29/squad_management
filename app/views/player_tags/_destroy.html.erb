<% if player_tag.tag.font_awesome %>
  <%= link_to player_tag_path(player_tag), data: { turbo_method: :delete, controller: 'tag-form', action: 'click->tag-form#destroy', id: player_tag.id }, class: 'tag-player' do %>
    <i class="<%= tag.font_awesome %>"></i>
  <% end %>
<% else %>
  <%= link_to player_tag.tag.abbrev, player_tag_path(player_tag), data: { turbo_method: :delete, remote: true }, class: 'tag-player' %>
<% end %>
